<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSC317_Tracker.Pages.DashboardPage"
             Title="Dashboard">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="This Month" FontSize="30" TextColor="White" HorizontalOptions="Center" />

        <Grid Padding="10" Margin="25, 100"
          RowDefinitions="100,100"
          ColumnDefinitions="*,*">
            <!-- Box 1 -->
            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                BackgroundColor="{AppThemeBinding Light=#587b4a, Dark=#568ea3}"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 15"
                Margin="5"
                HorizontalOptions="Fill" VerticalOptions="Fill">
                <Label Text="Box 1" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" />
            </Border>

            <!-- Box 2 -->
            <Border Grid.Row="0" Grid.Column="1"
                BackgroundColor="{AppThemeBinding Light=#587b4a, Dark=#568ea3}"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 15"
                Margin="5"
                HorizontalOptions="Fill" VerticalOptions="Fill">
                <Label Text="Box 2" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" />
            </Border>

            <!-- Box 4 -->
            <Border Grid.Row="1" Grid.Column="1"
                BackgroundColor="{AppThemeBinding Light=#587b4a, Dark=#568ea3}"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 15"
                Margin="5"
                HorizontalOptions="Fill" VerticalOptions="Fill">
                <Label Text="Box 4" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" />
            </Border>
        </Grid>
    </VerticalStackLayout>


</ContentPage>