<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:microcharts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
    x:Class="CSC317_Tracker.Pages.StatisticsPage"
    BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#272626}">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            
            <Label Text="Statistics"
                   FontSize="32"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                   
          <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" Padding="10" ColumnSpacing="30" RowSpacing="10">
            <microcharts:ChartView x:Name="BarChart"
                                    HeightRequest="300"
                                    WidthRequest="300"
                                    Grid.Column="0"
                                    Grid.RowSpan="2"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center" />

            <microcharts:ChartView x:Name="PieChart"
                                    HeightRequest="300"
                                    WidthRequest="300"
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center" />

            <StackLayout x:Name="PieLegend"
                        Padding="10"
                        Spacing="5"
                        Grid.Column="1"
                        Grid.Row="1"
                        HorizontalOptions="Center">
            </StackLayout>
        </Grid>

        </StackLayout>
    </ScrollView>
</ContentPage>
