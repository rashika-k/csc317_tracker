<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSC317_Tracker.Pages.BudgetPage"
             Title="Budget">

    <VerticalStackLayout Padding="20">
        <Label Text="Budget Content Here" 
               FontSize="20" 
               HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
using System;
using System.Windows.Forms;

namespace BudgetApp
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
            SetupUI();
        }

        private void SetupUI()
        {
            this.Text = "Budget Calculator";
            this.Width = 700;
            this.Height = 400;

            // Top menu
            string[] menuItems = { "Dashboard", "Add Expenses", "Budget", "Goals", "Statistics", "Setting" };
            int xPos = 10;

            foreach (var item in menuItems)
            {
                Button btn = new Button();
                btn.Text = item;
                btn.Left = xPos;
                btn.Top = 10;
                btn.Width = 100;
                this.Controls.Add(btn);
                xPos += 105;
            }

            // Labels and TextBoxes
            Label lblBudget = new Label() { Text = "Enter Budget:", Left = 50, Top = 70, Width = 120 };
            TextBox txtBudget = new TextBox() { Left = 180, Top = 70, Width = 120, Name = "txtBudget" };

            Label lblNecessities = new Label() { Text = "Necessities:", Left = 50, Top = 110, Width = 120 };
            TextBox txtNecessities = new TextBox() { Left = 180, Top = 110, Width = 120, Name = "txtNecessities" };

            Label lblMeals = new Label() { Text = "Meals:", Left = 50, Top = 150, Width = 120 };
            TextBox txtMeals = new TextBox() { Left = 180, Top = 150, Width = 120, Name = "txtMeals" };

            Label lblMisc = new Label() { Text = "Miscellaneous:", Left = 50, Top = 190, Width = 120 };
            TextBox txtMisc = new TextBox() { Left = 180, Top = 190, Width = 120, Name = "txtMisc" };

            Button btnCalc = new Button() { Text = "Calculate", Left = 180, Top = 230, Width = 120 };
            btnCalc.Click += BtnCalc_Click;

            Label lblResult = new Label() { Text = "Remaining Budget:", Left = 50, Top = 270, Width = 300, Name = "lblResult" };

            this.Controls.Add(lblBudget);
            this.Controls.Add(txtBudget);
            this.Controls.Add(lblNecessities);
            this.Controls.Add(txtNecessities);
            this.Controls.Add(lblMeals);
            this.Controls.Add(txtMeals);
            this.Controls.Add(lblMisc);
            this.Controls.Add(txtMisc);
            this.Controls.Add(btnCalc);
            this.Controls.Add(lblResult);
        }

        private void BtnCalc_Click(object sender, EventArgs e)
        {
            try
            {
                double budget = double.Parse(this.Controls["txtBudget"].Text);
                double necessities = double.Parse(this.Controls["txtNecessities"].Text);
                double meals = double.Parse(this.Controls["txtMeals"].Text);
                double misc = double.Parse(this.Controls["txtMisc"].Text);

                double totalExpenses = necessities + meals + misc;
                double remaining = budget - totalExpenses;

                this.Controls["lblResult"].Text = $"Remaining Budget: {remaining:C}";
            }
            catch
            {
                MessageBox.Show("Please enter valid numbers only.");
            }
        }

        [STAThread]
        static void Main()
        {
            Application.EnableVisualStyles();
            Application.Run(new Form1());
        }
    }
}
