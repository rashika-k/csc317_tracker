<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BudgetCalculatorApp.BudgetPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <!-- Main Layout -->
    <Grid Padding="20">
        
        <!-- Header with menu -->
        <StackLayout Orientation="Horizontal" Spacing="20" HorizontalOptions="StartAndExpand">
            <Button Text="Dashboard" />
            <Button Text="Add Expenses" />
            <Button Text="Budget" />
            <Button Text="Goals" />
            <Button Text="Statistics" />
            <Button Text="Setting" />
        </StackLayout>

        <!-- Budget and Expenses Section -->
        <StackLayout Padding="20, 40, 20, 20">
            
            <Label Text="Enter Your Budget" FontSize="Medium" HorizontalOptions="Center"/>
            <Entry x:Name="BudgetEntry" Placeholder="Enter budget" Keyboard="Numeric" />
            
            <Label Text="Enter Expenses" FontSize="Medium" HorizontalOptions="Center"/>
            
            <Label Text="Necessities" />
            <Entry x:Name="NecessitiesEntry" Placeholder="Enter necessities expense" Keyboard="Numeric" />

            <Label Text="Miscellaneous" />
            <Entry x:Name="MiscellaneousEntry" Placeholder="Enter miscellaneous expense" Keyboard="Numeric" />

            <Label Text="Other" />
            <Entry x:Name="OtherEntry" Placeholder="Enter other expenses" Keyboard="Numeric" />

            <Label Text="Meals/Food" />
            <Entry x:Name="FoodEntry" Placeholder="Enter food expense" Keyboard="Numeric" />

            <Button Text="Calculate" Clicked="OnCalculateButtonClicked" HorizontalOptions="Center" />
            
            <!-- Results Section -->
            <StackLayout Padding="20">
                <Label x:Name="RemainingBudgetLabel" Text="Remaining Budget: " FontSize="Medium"/>
                <Label x:Name="ExpensesTotalLabel" Text="Total Expenses: " FontSize="Medium"/>
                <Label x:Name="BalanceLabel" Text="Balance: " FontSize="Medium"/>
            </StackLayout>

        </StackLayout>

    </Grid>
</ContentPage>

