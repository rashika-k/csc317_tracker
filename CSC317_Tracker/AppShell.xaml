<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CSC317_Tracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CSC317_Tracker"
    xmlns:pages="clr-namespace:CSC317_Tracker.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.TabBarBackgroundColor="{AppThemeBinding Light=#587b4a, Dark=#568ea3}"
    Shell.BackgroundColor="{AppThemeBinding Light=#ffffff Dark=#272626}"
    Title="CSC317_Tracker">

    <TabBar x:Name="Navig">
        <Tab Title="Dashboard">
            <ShellContent ContentTemplate="{DataTemplate pages:DashboardPage}" />
        </Tab>
        <Tab Title="Add Expenses">
            <ShellContent ContentTemplate="{DataTemplate pages:ExpenseTrackerPage}" />
        </Tab>
        <Tab Title="Budget">
            <ShellContent ContentTemplate="{DataTemplate pages:BudgetPage}" />
        </Tab>
        <Tab Title="Goals">
            <ShellContent ContentTemplate="{DataTemplate pages:GoalsPage}" />
        </Tab>
        <Tab Title="Statistics">
            <ShellContent ContentTemplate="{DataTemplate pages:StatisticsPage}" />
        </Tab>
        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>
